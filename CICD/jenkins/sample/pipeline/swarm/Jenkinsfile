    string(name: 'SVC_VERSION', defaultValue: 'EMPTY', description: 'è¯·æŒ‡å®š`docker image tag`çš„å€¼ï¼Œé»˜è®¤å°†æå– `git rev id`')
    string(name: 'GIT_BRANCH_NAME', defaultValue: '*/develop', description: 'è¯·æŒ‡å®š git åˆ†æ”¯ï¼š')
